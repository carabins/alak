{
  "compilerOptions": {
    "outDir": ".middle",
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "alak/*": [
        "packages/alak/src/*"
      ],
      "@alaq/molecule/*": [
        "packages/molecule/src/*"
      ],
      "@alaq/atom/*": [
        "packages/atom/src/*"
      ],
      "@alaq/nucleus/*": [
        "packages/nucleus/src/*"
      ],
      "@alaq/bitmask/*": [
        "packages/bitmask/src/*"
      ],
      "@alaq/datastruct/*": [
        "packages/datastruct/src/*"
      ],
      "~/scripts/*": [
        "scripts/*"
      ]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "types": [
      "@types/node",
      "typescript"
    ]
  },
  "include": [
    "packages/atom/types/*.d.ts",
    "packages/molecule/types/*.d.ts",
    "packages/nucleus/types/*.d.ts",
    "packages/alak/types/*.d.ts",
    "packages/vue/types/*.d.ts",
    "packages/svg/types/*.d.ts",

    "packages/**/*.ts",
    "scripts/**/*.d.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
