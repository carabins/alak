{
  "compilerOptions": {
    "outDir": ".tsc-outDir",
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "alak": [
        "packages/alak/src/index.ts"
      ],
      "alak/*": [
        "packages/alak/src/*"
      ],
      "@alaq/atom": [
        "packages/atom/src/index.ts"
      ],
      "@alaq/atom/*": [
        "packages/atom/src/*"
      ],
      "@alaq/nucleus": [
        "packages/nucleus/src/index.ts"
      ],
      "@alaq/nucleus/*": [
        "packages/nucleus/src/*"
      ],
      "~/scripts/*": [
        "scripts/*"
      ]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "types": [
      "@types/node",
      "@types/bun",
      "typescript"
    ]
  },
  "include": [
    "packages/atom/types/*.d.ts",
    "packages/nucleus/types/*.d.ts",
    "packages/alak/types/*.d.ts",
    "packages/vue/types/*.d.ts",

    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "scripts/**/*.d.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "tsconfig-paths/register"
    ],
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
