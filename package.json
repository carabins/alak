    "dev": "ts-node-dev --respawn --transpile-only --quiet --rs -r tsconfig-paths/register packages/dev.ts"
  },
  "dependencies": {
    "@swc-node/core": "^1.10.4",
    "@swc-node/register": "^1.6.6",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.0",
    "@types/tap": "^15.0.8",
    "chokidar": "^3.5.3",
    "colorette": "^2.0.20",
    "fs-extra": "^11.1.1",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "prettier": "3.0.0",
    "tap": "^16.3.7",
    "tap-mocha-reporter": "^5.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.0",
    "type-fest": "^3.12.0",
    "typescript": "~5.1.6"
  },
  "devDependencies": {
    "simple-git": "^3.19.1",
    "vue": "^3.3.4"
  }
